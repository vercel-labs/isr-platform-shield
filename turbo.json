{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "env": {
    "TURBO_PLATFORM_ENV_DISABLED": "false"
  },
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": [
        "^build"
      ]
    },
    "format": {
      "cache": false
    }
  }
}