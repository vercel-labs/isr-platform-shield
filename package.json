{
  "name": "@platform/durable-isr-poc",
  "private": true,
  "scripts": {
    "start": "turbo run start",
    "build": "turbo run build --env-mode=loose",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "biome format --write",
    "deploy:api": "turbo run deploy:api --filter=@platform/api",
    "deploy:core": "turbo run deploy:core --filter=@platform/core",
    "deploy:core-system": "turbo run deploy:core-system",
    "deploy:cache-layer": "turbo run deploy:cache-layer --filter=@platform/cache-layer",
    "deploy:all": "turbo run deploy:all",
    "deploy:api:manual": "vercel deploy --prod apps/api",
    "deploy:core:manual": "vercel deploy --prod apps/core",
    "deploy:cache-layer:manual": "vercel deploy --prod apps/cache-layer"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "vercel": "^47.0.5"
  },
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=22"
  }
}